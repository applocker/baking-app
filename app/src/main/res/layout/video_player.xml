<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/imageButtonMediaPlayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/play_button"
        app:srcCompat="@drawable/ic_play_arrow_black_24dp"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayoutContainerNoMedia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageViewNoMediaToPlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/no_media"
             app:srcCompat="@drawable/ic_video_player_128"/>

        <TextView
            android:id="@+id/textViewNoMedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/video_unavailable"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/textSize_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageViewNoMediaToPlay"
            app:layout_constraintStart_toStartOf="@+id/imageViewNoMediaToPlay"
            app:layout_constraintTop_toTopOf="@+id/imageViewNoMediaToPlay" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>